<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PM2E2GRUPO6.Vista.Modificar" Title="Modificar Sitio">
    <ContentPage.Content>
        <ScrollView>

            <StackLayout>

                 
                <Image x:Name="imagen" Source="perfil.jpg" HorizontalOptions="Center" HeightRequest="150" />

                <Button Text="Tomar foto" x:Name="btnfotocap" Clicked="btnfotocap_Clicked" />
                <Button Text="Tomar Foto Galeria" x:Name="btnCapturarFoto" Clicked="btnCapturarFoto_Clicked" />

                <Entry x:Name="txtId"  IsReadOnly="True" />
                <Entry x:Name="txtDescripcion" />
                <Entry x:Name="txtLatitud" IsReadOnly="True"/>
                <Entry x:Name="txtLongitud" IsReadOnly="True" />
                <Button Text="Modificar Ubicacion" x:Name="btnsalnvar" Clicked="btnsalnvar_Clicked" />
                
            </StackLayout>

        </ScrollView>


    </ContentPage.Content>
</ContentPage>